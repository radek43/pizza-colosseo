<Window x:Class="pizza_colosseo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pizza_colosseo"
        mc:Ignorable="d"
        Title="Pizzeria Colosseo" Height="450" Width="800" ResizeMode="NoResize">
    <Grid x:Name="frmMain" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
        <Label x:Name="lblTitle" Content=" Pizza - Bake &amp; Sale" HorizontalAlignment="Left" Margin="295,43,0,0" VerticalAlignment="Top" Height="36" Width="257" FontSize="24" FontWeight="Bold"/>
        <GroupBox x:Name="gbpizza" Header="Pizza Type" HorizontalAlignment="Left" Height="252" VerticalAlignment="Top" Width="704" Margin="47,115,0,0" FontWeight="Bold">
            <Canvas HorizontalAlignment="Left" Height="208" VerticalAlignment="Top" Width="684" Margin="0,0,-12,-13.6">
                <Label x:Name="lblMargheritaPizza" Content="Pizza Margherita" Canvas.Left="10" Canvas.Top="10"/>
                <TextBox x:Name="txtMargheritaPizza" Height="23" Canvas.Left="10" TextWrapping="Wrap" Text="0" Canvas.Top="40" Width="105" TextAlignment="Right" IsReadOnly="True"/>
            </Canvas>
        </GroupBox>

    </Grid>
</Window>
